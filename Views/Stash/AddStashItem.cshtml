@model StashItem

<form asp-controller="Stash" asp-action="AddStashItem">

    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="ItemName" class="col-md-2 control-label"></label>
        <input asp-for="ItemName" class="form-control"/>
        <span asp-validation-for="ItemName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Scale" class="col-md-2 control-label"></label>
        <input asp-for="Scale" class="form-control"/>
        <span asp-validation-for="Scale"></span> 
    </div>
        <select asp-for="ItemType" class="form-control" placeholder="Select Main Interest">
        <option>Kit</option>
        <option>Resin Upgrade</option>
        <option>Photo Etch</option>
        <option>Decals</option>
        <option>Diorama</option>
    </select>
    <div class="form-group">
        <label asp-for="Manufacturer" class="col-md-2 control-label"></label>
        <input asp-for="Manufacturer" class="form-control"/>
        <span asp-validation-for="Manufacturer"></span>
    </div>
    <div class="form-group">
        <label asp-for="ItemNumber"class="col-md-2 control-label"></label>
        <input asp-for="ItemNumber" class="form-control"/>
        <span asp-validation-for="ItemNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comments" class="col-md-2 control-label"></label>
        <textarea asp-for="Comments" class="form-control"/>
        <span asp-validation-for="Comments"></span>
    </div>
    <input asp-for="ItemID" type="hidden" value="@Model.List.ItemID"/>
    <button type="submit"class="btn btn-primary text-center">Add Item</button>
</form>